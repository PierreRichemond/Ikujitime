<%= render './children/childcard', child: @child, class: 'mt-3' %>
<div class="container mb-5">
  <div class="d-flex align-self-center my-5 show-card-main" style='background-color:white;'>
    <div class='align-self-center'>
      <% if @activity.photo.attached? %>
        <%= cl_image_tag @activity.photo.key, style: "width: 500px; height: 400px;"%>
      <% else %>
        <%= image_tag 'camera-photo.png', "width: 100%;"%>
      <% end %>
    </div>
    <div class="modal-body">
      <h1 class='modal-h2'><%= @activity.name.capitalize %></h1>
      <p class='modal-price'><%= number_with_delimiter(@activity.price, delimiter: ',') %>Â¥ / person</p>
      <p class='modal-p'>Address: <%= @activity.address %></p>
      <p class='modal-p'><%= @activity.description %></p>
      <div class='d-flex justify-content-center'>
        <%= link_to 'View website', @activity.website_link, class: "btn-lg btn-primary", target:"_blank" %>
      </div>
    </div>
  </div>
  <div class="border-top py-4">
    <div class='d-flex justify-content-center'>
      <%= render './children/childcard', child: @child, class:'centering' %>
    </div>
    <div class="d-flex justify-content-center mt-4">
      <% @events.each do|event| %>
        <% unless event.activity %>
          <%= render 'event_dropdown', event: event %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
