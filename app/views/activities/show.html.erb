<%= render './children/childcard', child: @child %>
<%= link_to 'Back', child_path(@child, tab: "activities"), class: "btn-lg btn-secondary btn-replacement"%>
<div class="container my-3">
  <div class="d-flex align-item-center mb-5 mt-3 show-card-main" style='background-color:white;'>
    <% if @activity.photo.attached? %>
      <%= cl_image_tag @activity.photo.key, class:'image-show'%>
    <% else %>
      <%= image_tag 'camera-photo.png', class:'image-show'%>
    <% end %>
    <div class='ml-3'>
      <h1 class='modal-h2'><%= @activity.name.capitalize %>
        <%= link_to @activity.website_link, target:"_blank" do%>
          <small><i class="fas fa-external-link-square-alt icon align-item-center"></i></small>
        <% end %>
      </h1>
      <div class="d-flex justify-content-between align-items-center">
        <p class='modal-price'><i class="fas fa-map-marked-alt"></i>: <%= @activity.address %></p>
        <p class='modal-price'><%= number_with_delimiter(@activity.price, delimiter: ',') %>Â¥ / person</p>
      </div>
      <p class='modal-p'><%= @activity.description %></p>
      <div class='d-flex justify-content-between'>
        <% @events.each do|event| %>
          <% unless event.activity %>
            <%= render 'event_dropdown', event: event %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
