<div class="modal fade" id="exampleModalCenter-gift<%= gift.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">
          <% if gift.photo.attached? %>
            <%= cl_image_tag gift.photo.key, style: "width: 100%;"%>
          <% else %>
            <%= image_tag 'camera-photo.png', "width: 100%;"%>
          <% end %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h2 class='modal-h2'><%= gift.name.capitalize %></h2>
        <p class='modal-price'>Suggested Age Range: <%= gift.start_age %>-<%= gift.end_age %></p>
        <p class='modal-price'>Price:<%= number_with_delimiter(gift.price, delimiter: ',') %></p>
        <p class='modal-p'><%= gift.description %></p>
      </div>
      <div class="modal-footer d-flex justify-content-between py-0 my-0">
        <a href="<%= gift.website_link %>" class="btn btn-primary">View Store</a>
        <%= simple_form_for event do |f| %>
          <%= f.input :gift_id, as: :hidden, input_html: { value: gift.id }  %>
          <%= f.submit "add to event", class: "btn btn-primary centered" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
