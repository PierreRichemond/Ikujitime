<div class="container my-5">
  <%= simple_form_for [@user, @child] do |f| %>
    <%= f.input :first_name, placeholder: "Tom", class: 'mt-5' %>
    <%= f.input :middle_name %>
    <%= f.input :last_name, placeholder: "Sawyer" %>
    <%= f.input :parent %>
    <%= f.input :gender, as: :radio_buttons, collection: Child::GENDERS %>
    <%= f.input :birthday %>
    <%= f.input :hobby, as: :text, placeholder: "Watch tv, play baseball..." %>
    <%= f.input :photo, as: :file, input_html: { class: 'd-none' },
  label_html: { class: 'upload-photo'}, label: 'ğŸ“· Upload a profile photo for this child'  %>
    <% if @child.photo.attached? %>
      <p><%= @child.photo %> has been attached</p>
    <% end %>
    <%= f.submit 'Register this child', class: 'btn btn-warning my-3 px-5', style: "border-radius: 20px;" %>
  <% end %>
</div>
