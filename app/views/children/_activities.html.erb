<% if params[:tab] == 'activities' %>
<div data-controller="build-map" data-build='true' ></div>
<% end %>
  <div class="activity-tag">
    <div data-controller="active-btn">
      <%= link_to 'All', child_path(@child, tab: 'activities'), class: "btn btn-primary tag-btn active-btn", data:{target:"active-btn.content", action:"btnActive"}%>
      <% ActsAsTaggableOn::Tag.all.each do |tag| %>
        <%= link_to tag, child_path(@child, tab: 'activities', tag: tag.name), class: "btn btn-primary tag-btn", data:{target:"active-btn.content", action:"btnActive"} %>
      <% end %>
    </div>
    <%= render 'childcard', child: @child %>
  </div>
    <%= render './activity_components/activity_search_result', activities: @activities, child: @child %>
