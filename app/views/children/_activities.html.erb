<p class="mt-3">There are <%= @activities.count %> results</p>
  <% if @activities.count > 0 %>
      <div class="container pr-5">
        <div class="row">
          <% @activities.each do |activity| %>
            <div class="col-12 col-md-6 col-lg-4 py-2">
              <a href="#" class="card-link" data-toggle="modal" data-target="#exampleModalCenter-<%= activity.id %>">
              <%= render './activity_components/activitycards', activity: activity %>
              </a>
              <%= render "./activity_components/activity_modal", activity: activity %>
            </div>
          <% end %>
        </div>
      </div>
  <% else %>
    <h3 class="centered m-5"><i class="fas fa-sad-tear"></i> Please try another key word....</h3>
  <% end %>
