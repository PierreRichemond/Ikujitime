<p class="mt-3">There are <%= @gifts.count %> results</p>
  <% if @gifts.count > 0 %>
      <div class="container pr-5">
        <div class="row">
          <% @gifts.each do |gift| %>
            <div class="col-12 col-md-6 col-lg-4 py-2">
              <a href="#" class="card-link" data-toggle="modal" data-target="#exampleModalCenter-<%= gift.id %>">
              <%= render 'giftcards', gift: gift %>
              </a>
              <%= render 'gift_modal', gift: gift %>
            </div>
          <% end %>
        </div>
  <% else %>
    <h3 class="centered m-5"><i class="fas fa-sad-tear"></i> Please try another key word....</h3>
  <% end %>
