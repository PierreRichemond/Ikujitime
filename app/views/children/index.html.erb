                    <p> üéÇ <%= child.birthday %></p>
                    <p><%= child.age %></p>
                  </div>
                  <%= link_to "See more", child_path(child), class: "btn-small btn-primary p-2 position-absolute" %>
                  <%= link_to edit_child_path(child), child: child, class: 'edit-child' do%>
                    <i class="fas fa-user-edit"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
