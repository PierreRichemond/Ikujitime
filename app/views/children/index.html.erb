<div class="index-child-container width-index">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-8">
      <div class="container width-children-cards">
        <h1 class='text-center index-h1'>Your children list</h1>
        <div class="d-flex justify-content-center">
          <a class="btn-child-show btn btn-primary my-1" href="/children/new"><span>Add Member <i class="fas fa-user-plus"></i></span></a>
        </div>
        <div class="row" style='justify-content:center;'>
          <% @children.each do |child| %>
            <div class="card-product my-4 col-6 col-md-5 col-lg-5">
              <% if child.photo.attached? %>
                <%= cl_image_tag child.photo.key%>
              <% else %>
                <%= cl_image_tag "mm6cyjjx011lc0s281clou5yb45q" %>
              <% end %>
              <div class="card-product-infos child-absolute">
                <h2 class=''><%= child.full_name %></h2>
                <div class="d-flex justify-content-between">
                  <div class ='seemore pl-2'>
                    <div class="d-flex">
                      <%= image_tag'family.png', class: 'image-tag-index mb-1'%>
                      <p><%= child.parent %> </p>
                    </div>
                    <div class="d-flex">
                      <%= image_tag'jigsaw.png', class: 'image-tag-index'%>
                      <% if child.hobby.present? %>
                        <p class='mb-4'><%= child.hobby %></p>
                      <% else %>
                        <p class='mb-4'>None yet.</p>
                      <% end %>
                    </div>
                    <%= link_to "See more", child_path(child), class: "btn-child-show btn-small btn-primary p-2" %>
                  </div>
                  <div class='align-right pr-2'>
                    <p> ðŸŽ‚ <%= child.birthday %></p>
                    <p><%= child.age %></p>
                  </div>
                  <%= link_to edit_child_path(child), child: child, class: 'edit-child' do%>
                    <i class="fas fa-user-edit"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
