<div class="container-fluid" style="height=100%">
  <div class="row">
    <div class="col-12 col-md-3 col-lg-3 sidenav" style="overflow:auto">
      <div class="mt-5">
        <% if @child.photo.attached? %>
          <%= cl_image_tag @child.photo.key, class: "avatar-xlarge m-3"%>
        <% else %>
          <span class="m-3">
            <%= image_tag 'clock-image.png'%>
          </span>
        <%end %>
      </div>
      <div style="padding-top: 30px;">
        <h3 style="padding-bottom: 20px;"><strong><%= @child.first_name %></strong></h3>
        <p>Age: <%= @child.age(@child) %></p>
        <p>Birthday: <%= @child.birthday.strftime("%d of %B, %Y") %></p>
        <p>Gender: <%= @child.gender %></p>
        <p>Hobby: <%= @child.hobby %></p>
      </div>
      <div id="events_calendar" style="padding-top: 30px" >
        <%= render "children/calendar", locals: {events: @events} %>


        <%# <%= month_calendar(events: @events) do |date, events| %>
          <%# <% if events.length > 0 %>
            <%# <% events.each do |event| %>
              <%# <% if event.start_date.strftime("%Y-%m-%d") >= Date.today.strftime("%Y-%m-%d") %>
              <%# <div class="border-5 border border-danger"> %>
                <%# <%= date.day %>
                <%# <% break %>
              <%# </div> %>
            <%# <% end %>
          <%# <% else %>
            <%# <%= date.day %>
          <%# <% end %>
        <%# <% end %>


      </div>
      <div class="mb-4" style="padding-top: 50px">
        <p style="padding-bottom: 20px;"><strong>CREATE AN EVENT</strong></p>
        <%= simple_form_for [@child, @event_new] do |f| %>
          <%= f.input :start_date,:label => "Start date", as: :string, required: false, input_html: {class: "datepicker"}%>
          <%= f.input :end_date,:label => "End date", as: :string, required: false, input_html: {class: "datepicker"}%>
          <%= f.input :occasion, as: :text %>
          <%= f.submit 'Create now!', class: 'btn btn-secondary my-3 px-5', style: "border-radius: 20px;" %>
        <% end %>
      </div>
    </div>
    <div class="col-12 col-md-9 col-lg-9">
      <ul class="nav tabs-underlined" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <a class="tab-underlined <%= "active" if params[:tab].nil? || params[:tab] ==  "history" %>" id="home-tab" data-toggle="tab" href="#history" role="tab" aria-controls="home" aria-selected="true">Events</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="tab-underlined <%= "active" if params[:tab] ==  "activities" %>" id="profile-tab" data-toggle="tab" href="#activities" role="tab" aria-controls="profile" aria-selected="false">Activities</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="tab-underlined <%= "active" if params[:tab] ==  "gifts" %>" id="converstion-tab" data-toggle="tab" href="#gifts" role="tab" aria-controls="converstion" aria-selected="false">Gifts</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade py-3 <%= "show active" if params[:tab].nil? || params[:tab] ==  "history" %>" id="history" role="tabpanel" aria-labelledby="home-tab">
          <%= render "children/history" %>
        </div>
        <% if @event.present? %>
          <div class="tab-pane fade py-3 <%= "show active" if params[:tab] ==  "activities"%>" id="activities" role="tabpanel" aria-labelledby="profile-tab">
            <%= render "children/activities", event: @event %>
          </div>
          <div class="tab-pane fade py-3 <%= "show active" if params[:tab] ==  "gifts"%>" id="gifts" role="tabpanel" aria-labelledby="converstion-tab">
            <%= render "children/gifts", event: @event %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
