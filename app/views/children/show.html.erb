      <ul class="nav tabs-underlined" id="myTab" role="tablist">
        <li class="nav-item border-right" role="presentation">
          <a class="tab-underlined <%= "active" if params[:tab].nil? || params[:tab] ==  "History" %>" id="home-tab" data-toggle="tab" href="history" role="tab" aria-controls="home" aria-selected="true">History</a>
