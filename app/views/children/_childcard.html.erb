<div class="childcard-container">
  <div class="childcard">
    <div class='avatar-bordered'>
      <% if child.photo.attached?%>
        <%= cl_image_tag child.photo.key%>
      <% else %>
        <%= image_tag "profile-photo1.png", class:'avatar-bordered'%>
      <% end %>
    </div>
    <div class='child-card-text'>
      <p><%= @child.first_name.capitalize %>
        <br>
        <%=@child.age%></p>
    </div>
  </div>
</div>
